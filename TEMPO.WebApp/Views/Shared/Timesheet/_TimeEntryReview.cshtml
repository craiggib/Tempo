@model TEMPO.WebApp.Models.Timesheet.TimeEntry

<tr class="timeEntry-row">
    @using (Html.BeginCollectionItem("TimeEntries"))
    {

        <td class="time-entry-column-project">
            @Html.HiddenFor(t => t.EntryId)
            @Html.DropDownListFor(t => t.ProjectId, Model.Projects, "--Select--", new { @class = "form-control" })
        </td>
        <td class="time-entry-column-worktype">            
            @Html.DropDownListFor(t => t.WorkTypeId, Model.WorkTypes, new { @class = "form-control" })
        </td>
        <td>
            @Html.HiddenFor(t => t.Sunday)            
            <input class="form-control time-entry" disabled="disabled" type="text" value="@Model.Sunday" name="ignore-m">
        </td>
        <td>
            @Html.HiddenFor(t => t.Monday)
            <input class="form-control time-entry" disabled="disabled" type="text" value="@Model.Monday" name="ignore-m">
        </td>
        <td>
            @Html.HiddenFor(t => t.Tuesday)
            <input class="form-control time-entry" disabled="disabled" type="text" value="@Model.Tuesday" name="ignore-m">
        </td>
        <td>
            @Html.HiddenFor(t => t.Wednesday)
            <input class="form-control time-entry" disabled="disabled" type="text" value="@Model.Wednesday" name="ignore-m">
        </td>
        <td>
            @Html.HiddenFor(t => t.Thursday)
            <input class="form-control time-entry" disabled="disabled" type="text" value="@Model.Thursday" name="ignore-m">
        </td>
        <td>
            @Html.HiddenFor(t => t.Friday)
            <input class="form-control time-entry" disabled="disabled" type="text" value="@Model.Friday" name="ignore-m">
        </td>
        <td>
            @Html.HiddenFor(t => t.Saturday)
            <input class="form-control time-entry" disabled="disabled" type="text" value="@Model.Saturday" name="ignore-m">
        </td>
        <td class="time-entry-delete">

            @*<button type="button" class="btn btn-warning btn-xs deleteTimeEntry" aria-label="Left Align" data-timeEntryId="@Model.EntryId"
                        data-toggle="confirmation">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>*@
        </td>
    }
</tr>
