@model TEMPO.WebApp.Models.Quote.QuoteTagSearch

@{
    ViewBag.Title = "TagSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .quote-table {
        margin-top: 15px;
    }

    .metric-value {
        font-size: 35px;
    }

    .btn-tag {
        margin: 2px;
    }
    .search-form{
        padding-bottom: 0px !important;
    }
    .row-search{
        margin-top:20px;
    }
</style>

<div class="row row-search">
    <div class="col-md-offset-3 col-md-6">
        @using (Html.BeginForm("TagSearch", "Quote", FormMethod.Get))
        {
            @Html.AntiForgeryToken()

            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-search"></i> Search All Quote Tags                    
                </div>
                <div class="panel-body form-horizontal search-form">

                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="form-group">
                                <div class="control-label col-md-3">
                                    Term
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.SearchTerm, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-8">
                                    <input type="submit" value="Search" class="btn btn-sm btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            

          
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        @Html.Partial("Quotes/_QuoteList", Model.SearchResults)

      
    </div>
</div>
